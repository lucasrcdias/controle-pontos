  = render partial: "dashboard/filter", locals: { url: [:dashboard, :workers], criterias: [[:user_name_cont, 'col-sm-4'], [:document_eq, 'col-sm-3'], [:code_or_internal_id_eq, 'col-sm-3']] }
    
.row
